extends layout

block content
  a(href="https://github.com/TimDaub/hnwisdom")
    img(style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/52760788cde945287fbb584134c4cbc2bc36f904/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f77686974655f6666666666662e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png")
  h1=title
  p.subtitle 
    | or comments on Hacker News 
    a(href="https://twitter.com/TimDaub") @TimDaub
    |  finds interesting.
  p.subtitle Submissions: tim.daubenschuetz (at) gmail.com || Twitter 
  p.subtitle kk. thx. bye.
  each submission in submissions
    div.hn-card
      p.text !{submission.comment.text}
      p.meta
        span.by 
          | by: 
          a(href="https://news.ycombinator.com/user?id=#{submission.comment.by}" target="_blank") #{submission.comment.by}
        span.time time: #{submission.comment.time}
        span.id 
          | id: 
          a(href="https://news.ycombinator.com/item?id=#{submission.comment.id}", target="_blank") #{submission.comment.id}
        span.parent
          | parent:
          a(href="https://news.ycombinator.com/item?id=#{submission.comment.parent}", target="_blank") #{submission.comment.parent}